<div class="row">
{{#each notes}}
<div class="col-md-3">
    <div class="card">
        <div class="card-body">
            <h1>Hello {{user.email}}</h1>
            <h4 class="card-title d-flex justify-content-between align-items-center">
                {{title}}
                <a href="/notes/edit/{{_id}}"><img src="/img/edit.png" width="40px" height="40px" /></a> 
            </h4>
            <p>{{description}}</p>
            <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block btn-sm" type="submit">
                  Borrar
                </button>
            </form>
        </div>
    </div>
</div>
{{else}}
<div class="card mx-auto">
    <div class="card-bofy">
        <p class="lead">No hay notas a√∫n</p>
        <a href="/notes/add" class="btn btn-success btn-block">Crear nota</a>
    </div>
</div>
{{/each}}
</div>